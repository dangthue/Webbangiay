@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Sanpham>

@{
    ViewData["Title"] = "DanhMucSanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h3>Danh sách các sản phẩm</h3>

<p>
    <a asp-action="ThemSanPhamMoi">Thêm sản phẩm</a>
</p>
<table class="table">
    <thead>
        <tr class="table-info">
            <th>
                Mã sản phẩm
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Giá
            </th>

            <th>
                Mô tả
            </th>
            
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            string @cls = "table-success";
        }
        @foreach (var item in Model)
        {
            i = i + 1;
            cls = "table-success";
            if (i % 2 == 0)
            {
                cls = "table-info";
            }
            <tr class="@cls">
                <td>
                    @Html.DisplayFor(modelItem => item.Masanpham)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tensanpham)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mota)
                </td>

               
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model, page => Url.Action("DanhMucSanPham", new {page=page}), new X.PagedList.Web.Common.PagedListRenderOptions(){
    LiElementClasses = new List<String> {"page-item"},
    PageClasses = new List<String> {"page-link"}
})

